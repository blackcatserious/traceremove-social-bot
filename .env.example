# Notion configuration
# Required: Notion integration token with read access to databases
NOTION_TOKEN=

# Legacy database ID (kept for backward compatibility)
NOTION_DATABASE_ID=

# 4 Notion databases for comprehensive AI system
# Registry: Public knowledge base and documentation
NOTION_DB_REGISTRY=6d3da5a01186475d8c2b794cca147a86
# Cases: Client projects and case studies
NOTION_DB_CASES=25cef6a76fa5800b8241f8ed4cd3be33
# Finance: Internal financial data (restricted access)
NOTION_DB_FINANCE=25cef6a76fa580eb912ff8cfca54155e
# Publishing: Academic publications and content pipeline
NOTION_DB_PUBLISHING=402cc41633384d35b30ec1ab7c3185da

# Sitemap URLs for RAG content extraction
SITEMAP_DEV=https://traceremove.dev/sitemap.xml
SITEMAP_COM=https://traceremove.com/sitemap.xml
SITEMAP_IO=https://traceremove.io/sitemap.xml

# Multi-model AI providers (at least OPENAI_API_KEY required)
# OpenAI: Primary provider for embeddings and chat completions
OPENAI_API_KEY=
# Anthropic: Claude models for long-form content
ANTHROPIC_API_KEY=
# Google: Gemini models for analysis tasks
GOOGLE_API_KEY=
# Mistral: European AI provider
MISTRAL_API_KEY=
# Groq: High-speed inference
GROQ_API_KEY=
# Cohere: Reranking and embeddings
COHERE_API_KEY=

# Vector database (required for RAG functionality)
# Upstash Vector: Managed vector database
UPSTASH_VECTOR_REST_URL=
UPSTASH_VECTOR_REST_TOKEN=

# PostgreSQL database (required for metadata storage)
# Format: postgresql://user:password@host:port/database
PG_DSN=

# S3-compatible storage (optional, for content archival)
S3_ENDPOINT=
S3_BUCKET=traceremove-content
S3_ACCESS_KEY=
S3_SECRET_KEY=

# Admin and security
# Admin token for accessing /api/admin/* endpoints
ADMIN_TOKEN=
# Secret for cron job authentication
CRON_SECRET=

# ORM configuration
# Default language for multi-language ORM responses
ORM_DEFAULT_LANG=en

# Enable dry-run publishing (true/false)
BOT_DRY_RUN=true

# Time zone for scheduling and date comparison
TIMEZONE=Europe/Belgrade

# X / Twitter API credentials
TWITTER_APP_KEY=
TWITTER_APP_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=

# Facebook Page credentials
FB_PAGE_ID=
FB_ACCESS_TOKEN=

# Instagram (Business/Creator) credentials
IG_BUSINESS_ACCOUNT_ID=
IG_ACCESS_TOKEN=

# LLM mode: off | simple | json
LLM_MODE=off

# GitHub integration
GITHUB_TOKEN=
GITHUB_WEBHOOK_SECRET=
GITHUB_OWNER=blackcatserious
GITHUB_REPO=traceremove-social-bot
